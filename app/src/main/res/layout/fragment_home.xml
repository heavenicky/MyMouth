<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#143F6B"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/coinmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="88dp"
        android:src="@drawable/coin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintLeft_toRightOf="@+id/coinmenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        android:textColor="@color/white"
        android:id="@+id/txtcoinmenu"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/coin"
        android:id="@+id/profilepict"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLevel"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginBottom="432dp"
        android:background="@drawable/merah"
        android:text="Theory"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coinmenu"
        android:layout_marginTop="@dimen/_52sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLeaderboard"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginTop="12dp"
        android:text="Leaderboard"
        app:layout_constraintTop_toBottomOf="@+id/btnLevel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/jingga"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShop"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginTop="12dp"
        android:text="Shop"
        app:layout_constraintTop_toBottomOf="@+id/btnLeaderboard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/kuning"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAchievement"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginTop="12dp"
        android:background="@drawable/orange"
        android:text="Achievement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShop"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_70sdp"
        android:src="@drawable/gigihome1"
        app:layout_constraintTop_toTopOf="@+id/profilepict"
        app:layout_constraintRight_toLeftOf="@+id/btnLeaderboard"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gigihome2"
        app:layout_constraintTop_toBottomOf="@+id/btnLeaderboard"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gigihome3"
        app:layout_constraintTop_toBottomOf="@+id/btnAchievement"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gigihome4"
        app:layout_constraintTop_toBottomOf="@+id/btnLevel"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gigihome5"
        app:layout_constraintTop_toBottomOf="@+id/btnAchievement"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>